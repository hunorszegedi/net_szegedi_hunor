<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feladat_1.MainPage">
    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Introducing"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

            <Label Text="Microsoft.Maui.Graphics.Controls"
               FontSize="Medium"
               HorizontalOptions="Center"
               Margin="0,0,0,10" />

            <Label Text="A .NET MAUI experiment that offers drawn controls allowing to choose between Cupertino, Fluent and Material."
               FontSize="Small"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

            <Label Text="Button"
               FontSize="Medium"
               FontAttributes="Bold"
               Margin="0,10"
               />

            <Button Text="Button"
                HorizontalOptions="Fill"
                BackgroundColor="Blue"
                />

            <Button Text="Disabled Button"
              HorizontalOptions="Fill"
                BackgroundColor="Grey"
                />

            <Button Text="Custom Button"
                HorizontalOptions="Fill"
                Margin="0,10"
                BackgroundColor="Red"
                    />

            <Label Text="CheckBox"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Margin="0,10" />

            <Frame BackgroundColor="LightGray"
                   Padding="10"
                   CornerRadius="5"
                   Margin="0,10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Chooose my boy"
                           FontSize="Small"
                           TextColor="Black"
                           Margin="0,0,0,5" />

                    <!-- CheckBox-ok -->
                    <Label Text="Default"
                       FontSize="Small"
                       Margin="0" />
                    <CheckBox IsChecked="True"
                              HorizontalOptions="Start"
                              Color="Black" />
                    <Label Text="Disabled"
                           FontSize="Small"
                       />

                    <CheckBox IsChecked="False"
                              HorizontalOptions="Start"
                              Color="Black" />
                    <Label Text="Custom"
                           FontSize="Small"
                          />

                    <CheckBox IsChecked="True"
                              HorizontalOptions="Start"
                              Color="Black" />

                </VerticalStackLayout>
            </Frame>

            <Label Text="Date/Picker"
               FontSize="Medium"
               FontAttributes="Bold"
               />

            <DatePicker Date="06/07/2021"
                    HorizontalOptions="Start"
                     />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>