<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Feladat_1.MainPage">

    <VerticalStackLayout Padding="20">
        <Label Text="Introducing Microsoft.Maui.Graphics.Controls"
               FontSize="Large"
               HorizontalOptions="Center"
               Margin="0,20,0,10" />

        <Label Text="A .NET MAUI experiment that offers drawn controls allowing to choose between Cupertino, Fluent and Material."
               FontSize="Medium"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <!-- Buttons Section -->
        <Label Text="Button"
               FontSize="Medium"
               Margin="0,10" />

        <Button Text="Button"
                HorizontalOptions="Start"
                Margin="0,10" />

        <Button Text="Disabled Button"
                HorizontalOptions="Start"
                Margin="0,10"
                IsEnabled="False" />

        <Button Text="Custom Button"
                HorizontalOptions="Start"
                Margin="0,10" />

        <!-- CheckBox Section -->
        <Label Text="CheckBox"
               FontSize="Medium"
               Margin="0,20,0,10" />

        <CheckBox IsChecked="True"
                  HorizontalOptions="Start"
                  Margin="0,10" />

        <CheckBox IsChecked="False"
                  HorizontalOptions="Start"
                  Margin="0,10"
                  IsEnabled="False" />

        <CheckBox IsChecked="True"
                  HorizontalOptions="Start"
                  Margin="0,10" />

        <!-- DatePicker Section -->
        <Label Text="DatePicker"
               FontSize="Medium"
               Margin="0,20,0,10" />

        <DatePicker Date="03/07/2021"
                    HorizontalOptions="Start"
                    Margin="0,10" />

    </VerticalStackLayout>
</ContentPage>